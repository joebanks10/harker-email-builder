 {
    "title": "Harker News Express",
    
    // Custom Header
    "header": [
        {
            "template": "topbar-text",
            "options": {
                "columns": [
                    {
                        "width": "340",
                        "elements": [
                            {
                                "template": "img",
                                "options": {
                                    "class": "logo-container",
                                    "src": "harker-news-express-logo.png",
                                    "alt": "Harker News Express",
                                    "width": 312,
                                    "height": 32,
                                    "valign": "middle"
                                }
                            }
                        ]
                    },
                    {
                        "width": "240",
                        "elements": [
                            {
                                "template": "element-list-inline",
                                "options": {
                                    "class": "topbar-links",
                                    "align": "right",
                                    "elements": [
                                        {
                                            "template": "content",
                                            "options": {
                                                "text": "<a href=\"http://www.harker.org\">Home</a>",
                                                "height": 48,
                                                "valign": "middle"
                                            }
                                        },
                                        {
                                            "template": "content",
                                            "options": {
                                                "text": "<a href=\"http://news.harker.org\">News</a>",
                                                "height": 48,
                                                "valign": "middle"
                                            }
                                        },
                                        {
                                            "template": "content",
                                            "options": {
                                                "text": "<a href=\"https://www.harker.org/login\">Portal</a>",
                                                "height": 48,
                                                "valign": "middle"
                                            }
                                        }
                                    ]
                                }
                            }   
                        ]
                    }
                ]
            }
        }
    ],
    
    // Modules
    // 
    // Templates: grid, two-columns, three-columns, 
    // content-sidebar, sidebar-content, element-grid
    // 
    // Standard Options: id, class, text, 
    // width, collapse_gutters (remove outer gutters on mobile), 
    // background_img (url), background_style (for td.background), 
    // style (for td.container), table_style (for table.module)
    // 
    // Grid Options: columns (required for grid), 
    // column_count, column_direction (ltr or rtl), 
    // gutter_width, gutter_height
    "content": [

        // Single Column (using grid template)
        {
            "template": "one-column", 
            "options": {
                "class": "gray-bg",
                "content": [
                    {   
                        "template": "content",
                        "options": {
                            "text": "Lorem ipsum dolor sit amet, consectetur adipisicing elit. Sunt similique, ipsum officia a velit. Nulla minus modi aliquam officia praesentium quae quis quasi corporis consequuntur, sapiente, ducimus alias dignissimos tenetur."
                        }
                    }
                ]
            }
        },

        // Article Listing
        {
            "template": "one-column",
            "options": {
                "class" : "rss",
                "content": [
                    {
                        "template": "article-grid",
                        "options": {
                            "rss": "http://news.harker.org/feed/",
                            "count": 7,
                            "feature": true,
                            "article": {
                                "content": false,
                                "button": false
                            },
                            "feature_article": {
                                "button": false
                            },
                            "header": [
                                {
                                    "template": "header",
                                    "options": {
                                        "text": "Top September Stories"
                                    }
                                }
                            ],
                            "footer": [
                                {
                                    "template": "button",
                                    "options": {
                                        "text": "Read More Stories at Harker News",
                                        "href": "http://news.harker.org",
                                        "align": "center",
                                        "style": "padding-top: 10px"
                                    }
                                }
                            ]
                        }
                    }
                ]
            }
        },

        // Two Columns
        {
            "template": "element-grid",
            "options": {
                "class": "gray-bg",
                "column_count": 2,
                "header": [
                    {
                        "template": "header",
                        "options": {
                            "text": "Express Features"
                        }
                    }
                ],
                "elements": [
                    {
                        "template": "element-list",
                        "options": {
                            "elements": [
                                {
                                    "template": "img",
                                    "options": {
                                        "src": "youtube-cover.png",
                                        "alt": "Middle School Flash Mob Video Cover",
                                        "href": "https://www.youtube.com/watch?v=xVHzmS74MV4",
                                        "width": 290,
                                        "img_class": "img-full"
                                    }
                                },
                                {   
                                    "template": "button",
                                    "options": {
                                        "type": "primary", // primary, secondary, outline, text
                                        "text": "Watch YouTube Video",
                                        "href": "https://www.youtube.com/watch?v=xVHzmS74MV4",
                                        "width": "100%",
                                        "style": "padding-top: 10px"
                                    }
                                }
                            ]
                        }
                    },
                    {
                        "template": "element-list",
                        "options": {
                            "elements": [
                                {
                                    "template": "img",
                                    "options": {
                                        "src": "instagram-cover.png",
                                        "alt": "Upper School Dance",
                                        "href": "https://www.instagram.com/p/BKlayz3DWA0/",
                                        "width": 290,
                                        "img_class": "img-full"
                                    }
                                },
                                {   
                                    "template": "button",
                                    "options": {
                                        "type": "primary", // primary, secondary, outline, text
                                        "text": "Watch Instagram Video",
                                        "href": "https://www.instagram.com/p/BKlayz3DWA0/",
                                        "width": "100%",
                                        "style": "padding-top: 10px"
                                    }
                                }
                            ]
                        }
                    },
                    {
                        "template": "element-list",
                        "options": {
                            "elements": [
                                {
                                    "template": "img",
                                    "options": {
                                        "src": "facebook-cover.png",
                                        "alt": "National Merit Semifinalists",
                                        "href": "https://www.facebook.com/harkerschool/posts/10153903574445737",
                                        "width": 290,
                                        "img_class": "img-full"
                                    }
                                },
                                {   
                                    "template": "button",
                                    "options": {
                                        "type": "primary", // primary, secondary, outline, text
                                        "text": "View Facebook Post",
                                        "href": "https://www.facebook.com/harkerschool/posts/10153903574445737",
                                        "width": "100%",
                                        "style": "padding-top: 10px"
                                    }
                                }
                            ]
                        }
                    },
                    {
                        "template": "element-list",
                        "options": {
                            "elements": [
                                {
                                    "template": "img",
                                    "options": {
                                        "src": "publication-cover.png",
                                        "alt": "Guide to Philanthropy",
                                        "href": "https://issuu.com/theharkerschool/docs/1507_har_guide2philanthrop_0716_vf2",
                                        "width": 290,
                                        "img_class": "img-full"
                                    }
                                },
                                {   
                                    "template": "button",
                                    "options": {
                                        "type": "primary", // primary, secondary, outline, text
                                        "text": "Read the Guide to Philanthropy",
                                        "href": "https://issuu.com/theharkerschool/docs/1507_har_guide2philanthrop_0716_vf2",
                                        "width": "100%",
                                        "style": "padding-top: 10px"
                                    }
                                }
                            ]
                        }
                    }
                ]
            }
        },

        // Content Left, Sidebar Right
        {
            "template": "content-sidebar",
            "options": {
                "gutter_height": 20,
                "content": [
                    {
                        "template": "header",
                        "options": {
                            "text": "Question of the Month"
                        }
                    },
                    {
                        "template": "content",
                        "options": {
                            "text": "What's your favorite part about Fall?<br><br>
                            Joe's Answer: Pumpkin Spice Lattes"
                        }
                    }
                ],
                "sidebar": [
                    {
                        "template": "button",
                        "options": {
                            "type": "outline",
                            "text": "Answer Question",
                            "href": "http://www.harker.org",
                            "width": "100%"
                        }
                    }
                ]
            }
        },

        // Promos
        {
            "template": "element-grid",
            "options": {
                "class": "gray-bg",
                "column_count": 2,
                "header": [
                    {
                        "template": "header",
                        "options": {
                            "text": "Upcoming Events"
                        }
                    }
                ],
                "elements": [
                    {
                        "template": "img",
                        "options": {
                            "src": "https://www.harker.org/uploaded/assets/graphics/promos/corporate/portal/eagle-store-promo.png",
                            "href": "https://harkerschool.mybrightsites.com/products?s%5Bf%5D%5Bc%5D%5B%5D=%2FHOMECOMING",
                            "width": 290,
                            "img_class": "img-full"
                        }
                    },
                    {
                        "template": "img",
                        "options": {
                            "src": "https://www.harker.org/uploaded/assets/graphics/promos/ADV_Harvest_Fest_PPortal_F_1617.png",
                            "href": "http://www.harker.org/picnic",
                            "width": 290,
                            "img_class": "img-full"
                        }
                    },
                    {
                        "template": "img",
                        "options": {
                            "src": "http://www.harker.org/uploaded/assets/graphics/promos/PA_US_AroundTW_HPP_F_1617.png",
                            "href": "http://www.harker.org/page.cfm?id=3564&verbose=247058",
                            "width": 290,
                            "img_class": "img-full"
                        }
                    },
                    {
                        "template": "img",
                        "options": {
                            "src": "homecoming-promo.jpg",
                            "width": 290,
                            "img_class": "img-full"
                        }
                    }
                ]
            }
        }

    ] // end of content modules

