    // Modules
    // 
    // Templates: module, grid
    // 
    // Options: id, class, text, 
    // width, collapse_gutters (remove outer gutters on mobile), 
    // background_img (url), background_style (for td.background), 
    // style (for td.container), table_style (for table.module)
    // columns (required for grid), 
    // column_count, column_direction (ltr or rtl), 
    // gutter_width, gutter_height
    "content": [
        {
            "template": "grid",
            "options": {
                "class": "module-big-img gray-bg",
                "style": "padding: 0;",
                "collapse_gutters": true,

                // Columns
                // 
                // Options: width (percent or numeric), elements
                "columns": [
                    {

                        // Elements
                        // 
                        // Templates: title, subtitle, header, subheader, 
                        // content, img, list, button
                        "elements": [
                            {   
                                "template": "img",
                                "options": {
                                    "src": "http://dummyimage.com/600x200/cccccc/333333.gif&text=header+image",
                                    "alt": "Big Image",
                                    "style": "padding: 0;",
                                    "img_class": "img-full"
                                }
                            }
                        ]
                    }
                ]
            }
        },
        {
            "template": "grid", 
            "options": {
                "class": "module-full-text",
                "columns": [
                    {
                        "width": "100%",
                        "elements": [
                            {
                                "template": "title", 
                                "options": {
                                    "text": "Some Title Can Go Here",
                                    "style": "padding-bottom: 20px;",
                                    "align": "center"
                                }
                            },
                            {
                                "template": "subtitle",
                                "options": {
                                    "text": "Some Text Goes Here | And Here",
