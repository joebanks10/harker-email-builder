    // Modules
    // 
    // Templates: module, grid
    // 
    // Options: id, class, text, 
    // width, collapse_gutters (remove outer gutters on mobile), 
    // background_img (url), background_style (for td.background), 
    // style (for td.container), table_style (for table.module)
    // columns (required for grid), 
    // column_count, column_direction (ltr or rtl), 
    // gutter_width, gutter_height
    "content": [
        {
            "template": "grid",
            "options": {
                "class": "module-big-img gray-bg",
                "style": "padding: 0;",
                "collapse_gutters": true,

                // Columns
                // 
                // Options: width (percent or numeric), elements
                "columns": [
                    {

                        // Elements
                        // 
                        // Templates: title, subtitle, header, subheader, 
                        // content, img, list, button
                        "elements": [
                            {   
                                "template": "img",
                                "options": {
                                    "src": "http://skylark.harker.org/email-builder/v2/emails/2016/senior-moms-lunch/assets/img/Seniormomsbanner.2.jpg",
                                    "alt": "Pink Flowers",
                                    "style": "padding: 0;"
                                }
                            }
                        ]
                    }
                ]
            }
        },
        {
            "template": "grid", 
            "options": {
                "class": "module-full-text",
                "columns": [
                    {
                        "width": "100%",
                        "elements": [
                            {
                                "template": "title", 
                                "options": {
                                    "text": "Senior Moms’ Luncheon",
                                    "style": "padding-bottom: 10px;"
                                }
                            },
                            {
                                "template": "subtitle",
                                "options": {
                                    "text": "Monday, May 16 at 11 a.m. | Saratoga Gym",
                                    "style": "font-size: 20px; line-height: 30px; padding-bottom: 40px"
                                }
                            },
                            {   
                                "template": "content",
                                "options": {
                                    "text": "
                                        Dear Moms of the Class of 2016,
                                        <br>
                                        <br>
                                        Fourteen years ago, a group of Harker moms from grades 9, 10 and 11 put together a potluck lunch to honor the moms of graduating seniors. It was the birth of what is now a time-honored tradition, celebrating parents’ years of dedication culminating in their students’ high school graduation. As this chapter of raising your children comes to a close, the moms of the classes of 2017, 2018 and 2019 would like to honor you and extend an invitation to attend.
                                        <br>
                                        <br>
                                        Please join us as an honoree for this 16th annual celebration.
                                        <br>
                                        <br>
                                        Lunch will be followed by an opportunity for moms to reflect on their years as a Harker parent, and look to the future, sharing their hopes and dreams as their students spread their wings.
                                        <br>
                                        <br>
                                        I look forward to seeing you at the Senior Moms’ Luncheon!
                                        <br>
                                        <br>
                                        Kathy Richmond<br>
                                        Grade 11 Parent"
                                }
                            },
                            {   
                                "template": "button",
                                "options": {
                                    "type": "primary", // primary, secondary, outline
                                    "text": "RSVP Today!",
                                    "href": "https://docs.google.com/forms/d/14VgvdQIzCSvQBHG7UYpQZKbwKUb_TPQ5If8ZH7Gvc0I/viewform"
                                }
                            }
                        ]
                    }
                ]
            }
        }
    ]

