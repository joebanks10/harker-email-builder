    // column_count, column_direction (ltr or rtl), 
    // gutter_width, gutter_height
    "content": [
        {
            "template": "grid",
            "options": {
                "class": "gray-bg",
                "style": "padding: 0;",
                "background_style": "background-color: #00573D;",
